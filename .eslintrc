{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "max-lines": [
      "error",
      {
        "max": 1000,
        "skipComments": true
      }
    ],
    "class-methods-use-this": [
      0
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "classes/name": [
      "error",
      "class",
      "method"
    ],
    "no-param-reassign": [
      0
    ],
    "prefer-rest-params": 0,
    "strict": 0,
    "prefer-spread": 0
  },
  "plugins": [
    "classes"
  ]
}
